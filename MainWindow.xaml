<Window x:Class="KiepWebcam.Viewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="KiepWebcam" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" MouseDown="MouseDownHandler" FontFamily="Arial" FontWeight="Bold" Icon="Icon.ico">
    
    <Grid>
        <Viewbox>
            <Image Name="imgWebcam"></Image>
        </Viewbox>
        <Image Margin="20" Name="imgStatus" Stretch="None" Source="Sync.png" VerticalAlignment="Bottom" HorizontalAlignment="Right" StretchDirection="DownOnly" />
        <Label Margin="40" Name="lblLastModified" HorizontalAlignment="Center" FontSize="80" Foreground="White">
            <Label.Effect>
                <DropShadowEffect BlurRadius="3" Direction="0" ShadowDepth="0" />
            </Label.Effect>
        </Label>
        
    </Grid>
    
</Window>
